<% @tasks.each do |task| %>
  <div>
    <h2><%= link_to task.title, task_path(task) %></h2>
    <p><%= task.details %></p>
    <p><%= task.completed ? 'Completed' : 'Not completed' %></p>
    <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
